source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Database
gem 'pg'
gem 'foreigner'

# Improvements
gem 'inherited_resources'

# Heroku - Server
gem 'thin'

# Frontend stuff
gem 'jquery-rails'
gem 'slim-rails'
gem 'rack-google-analytics'

group :assets do
  gem 'sass-rails',   '~> 3.2.5'
  gem 'coffee-rails', '~> 3.2.2'
  gem 'compass-rails', '~> 1.0.3'
  gem 'bootstrap-sass'
  gem 'uglifier', '>= 1.0.3'
end

group :production do
  gem 'execjs'
  gem 'therubyracer', :platform => :ruby
end

group :development, :test do
  gem 'pry'
  gem 'awesome_print'
end
